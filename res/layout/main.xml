<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent">
        <TextView
                android:id="@+id/app_name_header"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textStyle="bold"
                android:textSize="12pt"/>
        <TextView
                android:id="@+id/imei_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IMEI: "/>
        <TextView
                android:id="@+id/mdn_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MDN: "/>
        <TextView
                android:id="@+id/imsi_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IMSI: "/>
        <TextView
                android:id="@+id/manufacturer_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Device: "/>
        <TextView
                android:id="@+id/device_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Device: "/>
        <TextView
                android:id="@+id/sdk_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android Version: "/>
        <TextView
                android:id="@+id/network_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Network: "/>
        <TextView
                android:id="@+id/apn_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="APN: "/>
        <Button
                android:id="@+id/ButtonRefresh"
                android:layout_height="wrap_content"
                android:text="Refresh"
                android:onClick="dumpState"
                android:layout_width="fill_parent"/>
    </LinearLayout>
</ScrollView>